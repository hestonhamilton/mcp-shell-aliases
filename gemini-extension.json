{
  "name": "shell-aliases",
  "version": "0.1.0",
  "description": "Expose shell aliases as safe MCP tools via FastMCP.",
  "author": "Heston Hamilton",
  "license": "GNU GPLv3",
  "mcp_server": {
    "command": [
      "python3",
      "${extensionPath}/bootstrap.py",
      "--config",
      "${extensionPath}/config.yaml"
    ]
  },
  "configuration": {
    "aliasFiles": [
      "~/.bash_aliases"
    ]
  }
}
